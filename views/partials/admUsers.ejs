<%-include("../partials/headerAdm") %>
<body>
    

<main class="table-admin">

    <div class="titulo-admin">
        <h1 class="text-center">Administrar usuarios</h1>
    </div>
    <div class="class-table">
        <table>
            <thead>
                
                <tr>
                    <th>#</th>    
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>E-mail</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
                                            
            </thead>
            <tbody>
                <% users.forEach(({id,name,surname,email,rol})=> { %>

                    <tr>
                        <td>
                        <%=id %>
                    </td>
                    <td>
                        <%= name %>
                    </td>
                    <td>
                        <%= surname %>
                    </td>
                    <td>
                        <%= email %>
                    </td>
                    <td>
                        <%= rol.name %>
                    </td>
                    <td>
                        <div>
                            <a href="" class="btn-table">bloquear</a>
                        </div>
                        <div>
                            <a href="" class="btn-eliminar">eliminar</a>
                        </div>
                    </td>
                </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</main>
</body>